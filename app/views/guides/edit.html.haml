- semantic_form_for @guide, :html => {:multipart => true} do |f|
  
  %h2.legend Editing guide
  = render :partial => "form", :locals => { :f => f }

  - f.buttons do
    = f.commit_button "Save changes and publish now"

- content_for :breadcrumb_trail do
  = link_to "Guide Home", guides_path
  = link_to "Editing guide", edit_guide_path(@guide), :class => "last"
