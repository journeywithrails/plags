- semantic_form_for(@department) do |f|
  
  %h2.legend Create a new department
  = render :partial => "form", :locals => { :f => f }

  - f.buttons do
    = f.commit_button "Create this department"

- content_for :breadcrumb_trail do
  = link_to "Create a new department", new_department_path, :class => "last"
