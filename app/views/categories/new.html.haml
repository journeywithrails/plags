- semantic_form_for(@category) do |f|
  
  %h2.legend Create a new category
  = render :partial => "form", :locals => { :f => f }

  - f.buttons do
    = f.commit_button "Create this category"

- content_for :breadcrumb_trail do
  = link_to "Create a new category", new_category_path, :class => "last"
