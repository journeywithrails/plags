- semantic_form_for(@page) do |f|
  
  %h2.legend Create a new page
  = render :partial => "form", :locals => { :f => f }

  - f.buttons do
    = f.commit_button "Publish now"

- content_for :breadcrumb_trail do
  = link_to "Pages", pages_path
  = link_to "Create a new page", new_page_path, :class => "last"
